{% extends 'base.html.twig' %}

{% block title %}Entry{% endblock %}

{% block body %}
    <h1>Entry</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entry.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entry.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entry.date ? entry.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ entry.createdAt ? entry.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ entry.updatedAt ? entry.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_entry_index') }}">back to list</a>

    <a href="{{ path('app_entry_edit', {'id': entry.id}) }}">edit</a>

    {{ include('entry/_delete_form.html.twig') }}
{% endblock %}
